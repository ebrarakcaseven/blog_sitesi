@model Blog.Models.Kategori

<div class="container" style="max-width: 600px; margin: 0 auto; padding: 20px;">
    <h2 class="text-center mb-4">Kategori Düzenle</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/Kategori/Index">Kategori</a></li>
                <li class="breadcrumb-item active" aria-current="page">Kategori Düzenle</li>
            </ol>
        </nav>

        <div class="mb-3">
            <label asp-for="KategoriAd" class="form-label">Kategori Adı:</label>
            <input asp-for="KategoriAd" class="form-control" />
            <span asp-validation-for="KategoriAd" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary w-100">Kaydet</button>
    </form>
</div>
