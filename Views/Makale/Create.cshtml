@model Blog.Models.Makale

<div class="container" style="max-width: 800px; margin: 0 auto; padding: 20px;">
    <h4 class="text-center mb-4">Yeni Makale Ekle</h4>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Makale/Index">Makale</a></li>
            <li class="breadcrumb-item active" aria-current="page">Makale Ekle</li>
        </ol>
    </nav>
    <form asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="Baslik" class="form-label">Başlık</label>
            <input asp-for="Baslik" class="form-control" />
            <span asp-validation-for="Baslik" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Aciklama" class="form-label">Açıklama</label>
            <textarea asp-for="Aciklama" class="form-control"></textarea>
            <span asp-validation-for="Aciklama" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="KategoriId" class="form-label">Kategori</label>
            <select asp-for="KategoriId" class="form-control" asp-items="ViewBag.Kategoriler"></select>
            <span asp-validation-for="KategoriId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="KullaniciAd" class="form-label">Kullanıcı Adı</label>
            <input asp-for="KullaniciAd" class="form-control" value="@User.Identity.Name" readonly/>   
        </div>
        @if (this.User.IsInRole("admin"))
        {
            <div class="form-group">         
                    <label asp-for="Onay" class="form-label">Onay</label>
                    <input asp-for="Onay" class="form-check-input" type="checkbox" />
                    <span asp-validation-for="Onay" class="text-danger"></span>               
            </div>
        }
        else 
        {
             <div class="form-group" style="display: none;">         
                    <label asp-for="Onay" class="form-label">Onay</label>
                    <input asp-for="Onay" class="form-check-input" type="checkbox" />
                    <span asp-validation-for="Onay" class="text-danger"></span>               
            </div>
        }
        <div class="form-group" style="display: none">
            <label asp-for="Goruntulenme" class="form-label">Görüntülenme Sayısı</label>
            <input asp-for="Goruntulenme" class="form-control" value="0" />
            <span asp-validation-for="Goruntulenme" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="YayinTarih" class="form-label">Yayın Tarihi</label>
            <input asp-for="YayinTarih" class="form-control" type="date" />
            <span asp-validation-for="YayinTarih" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </form>

</div>
