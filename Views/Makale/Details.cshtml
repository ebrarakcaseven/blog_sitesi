@model Blog.Models.Makale


<div class="container" style="max-width: 800px; margin: 0 auto; padding: 20px;">
    <link href="~/css/site.css" rel="stylesheet" />
    <h4 class="text-center mb-4">@Model.Baslik</h4>

    <p>@Model.Aciklama</p>
    <p><strong>Kategori:</strong> @Model.Kategori.KategoriAd</p>
    <p><strong>Yayın Tarihi:</strong> @Model.YayinTarih.ToShortDateString()</p>
    <p><strong>Görüntülenme:</strong> @Model.Goruntulenme</p>
    <a href="/Makale/Index" class="btn custom-btn-pink btn-block btn-lg gradient-custom-4 text-body"
        style="font-size: 14px; border-radius: 10px; padding: 12px 20px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">Geri
        Dön</a>
</div>
