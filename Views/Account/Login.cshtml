@model Blog.Models.Login
@{
    ViewBag.Title = "Login";
}

<div class="container">
     <link href="~/css/site.css" rel="stylesheet" />
      <br />
      <div class="row">
        <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/Home/Index">Anasayfa</a></li>
         <li class="breadcrumb-item active" aria-current="page">Giriş Yap</li>
        </ol>
        </nav>
<div class="mask d-flex align-items-center h-100 gradient-custom-3">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-10 col-md-9 col-lg-7 col-xl-6">
                <div class="card" style="border-radius: 15px;">
                    <div class="card-body p-5">
                        <h3 class="text-center mb-4">Giriş Yap</h3>

                        @using(Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "row" }))
                        {
                            <div class="form-outline mb-4">
                                <label class="form-label" for="formUsername">Kullanıcı Adı</label>
                                @Html.EditorFor(m => m.Username, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
                                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-outline mb-4">
                                <label class="form-label" for="formPassword">Şifre</label>
                                @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>

                            <div class="d-flex justify-content-center">
                                <button type="submit" class="btn custom-btn-pink btn-block btn-lg gradient-custom-4 text-body" style="font-size: 14px; border-radius: 10px; padding: 12px 20px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
                                    <i class="bi bi-box-arrow-in-right"></i> Giriş
                                </button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

      </div>
    </div>